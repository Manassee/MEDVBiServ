@page "/present"
@layout PresentationLayout

<div class="slide-list">
    @for (int i = 0; i < Slides.Count; i++)
    {
        <MudPaper Class="slide-thumb" @onclick="@(() => SelectSlide(i))" Elevation="1">
            <strong>@Slides[i].Display</strong>
        </MudPaper>
    }
</div>

<div class="slide-display" @onclick="NextSlide">
    @if (CurrentIndex < Slides.Count)
    {
        var slide = Slides[CurrentIndex];
        <div>
            <div class="slide-title">@slide.Display</div>
            @if (!string.IsNullOrWhiteSpace(slide.Text))
            {
                <div class="slide-text">@slide.Text</div>
            }
        </div>
    }
    else
    {
        <div class="slide-title">🎉 Ende der Präsentation</div>
    }
</div>

@code {
    public class SlideItem
    {
        public string Display { get; set; } = string.Empty;
        public string Text { get; set; } = string.Empty;
    }

    private List<SlideItem> Slides = new()
    {
        new() { Display = "3. Mose 17:11", Text = "Ein Gott an bis tul stren." },
        new() { Display = "Philipper 4:13", Text = "Mach am elgense dlich." },
        new() { Display = "Anmerkung", Text = "Erresich lite das." }
    };

    private int CurrentIndex = 0;

    private void SelectSlide(int index) => CurrentIndex = index;

    private void NextSlide()
    {
        if (CurrentIndex < Slides.Count - 1)
            CurrentIndex++;
    }
}

    <style>

    .slide-list {
        width: 25%;
        background-color: #1a1a1a;
        overflow-y: auto;
        padding: 1rem;
    }

    .slide-thumb {
        padding: 1rem;
        margin-bottom: 0.5rem;
        cursor: pointer;
        background-color: #2a2a2a;
        color: white;
    }

        .slide-thumb:hover {
            background-color: #3a3a3a;
        }

    .slide-display {
        flex: 1;
        padding: 2rem;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
    }

    .slide-title {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .slide-text {
        font-size: 1.75rem;
        line-height: 1.6;
    }

    </style>